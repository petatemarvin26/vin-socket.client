{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "classes/*": ["classes/*"],
      "interfaces/*": ["interfaces/*"],
      "common/*": ["common/*"],
      "utils/*": ["utils/*"]
    },
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
